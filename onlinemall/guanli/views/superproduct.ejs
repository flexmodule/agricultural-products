<!DOCTYPE html>
<html>
  <head>
    <title></title>
    <link rel='stylesheet' href='/bootstrap/css/bootstrap.css' />
    <script src="/bootstrap/js/jquery-1.11.0.js" type="text/javascript" charset="utf-8" ></script>
    <script src="/bootstrap/js/bootstrap.js" type="text/javascript" charset="utf-8"></script>
    <style type="text/css" media="screen">
      .container form{
        width:600px;
      }
    </style>
  </head>
  <body>
   <%- include("./head.ejs",{title:title,isshow:false,issuper:true})%>

      <div class="container">

       <%if(isNew){%>
        

        <%} else {%> 
        <form method="post" action="/superproduct/fixed" enctype="multipart/form-data">
          <div class="form-group">
            <label>昵称:</label>
            <input type="text" class="form-control"name="name" value="<%= info.name%>">
          </div>
          <div class="form-group">
            <label>手机号:</label>
            <input type="text" class="form-control" name="tel" value="<%= info.tel%>">
          </div>
          <div class="form-group" style="visibility:hidden;">
                <label>密码:</label>
                <input type="text" class="form-control" name="psd" value="<%= info.password%>">
              </div>
           <input type="hidden" name="oType" class="oType" value=""/>
           <input type="hidden" name="id" value="<%= info._id%>"/>     
          <button type="submit" class="btn btn-default">更新账号</button>
        </form>
        <%}%>
      </div>
      <script>
        var key;
        var attr;
        var type;
        var dataid;
        if(window.location.search.split("?").length>1){
          var keyword=window.location.search.split("?")[1].split("&");
          var keywordlength=window.location.search.split("?")[1].split("&").length;
          for(var i=0;i<keywordlength;i++){
            if(keyword[i].split("=")[0]=="key"){
              key=decodeURIComponent(keyword[i].split("=")[1]);
            }else if(keyword[i].split("=")[0]=="attr"){
              attr=decodeURIComponent(keyword[i].split("=")[1]);
            }else if(keyword[i].split("=")[0]=="type"){
              type=decodeURIComponent(keyword[i].split("=")[1]);
            }else if(keyword[i].split("=")[0]=="dataid"){
              dataid=decodeURIComponent(keyword[i].split("=")[1]);
            }
          }

        }
        console.log(type)
        $(".oType").val(type)
      </script>
  </body>
</html>




